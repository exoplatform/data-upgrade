<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">

  <external-component-plugins>
    <target-component>org.exoplatform.commons.upgrade.UpgradeProductService</target-component>
    <component-plugin  profiles="notes">
      <name>WikiHomeHomePageUpgradePlugin</name>
      <set-method>addUpgradePlugin</set-method>
      <type>org.exoplatform.wiki.upgrade.WikiPageNameUpgradePlugin</type>
      <description>Rename WikiHome pages</description>
      <init-params>
        <value-param>
          <name>product.group.id</name>
          <description>The groupId of the product</description>
          <value>org.exoplatform.platform</value>
        </value-param>
        <value-param>
          <name>plugin.upgrade.target.version</name>
          <description>The plugin target version of selected groupId</description>
          <value>6.1.0</value>
        </value-param>
        <value-param>
          <name>plugin.execution.order</name>
          <description>The plugin execution order</description>
          <value>10</value>
        </value-param>
        <value-param>
          <name>plugin.upgrade.execute.once</name>
          <description>The plugin must be executed only once</description>
          <value>true</value>
        </value-param>
        <value-param>
          <name>plugin.upgrade.async.execution</name>
          <description>The plugin will be executed in an asynchronous mode</description>
          <value>true</value>
        </value-param>
        <value-param>
          <name>old.note.name</name>
          <description>The plugin will replace this note name by the new one</description>
          <value>WikiHome</value>
        </value-param>
        <value-param>
          <name>new.note.name</name>
          <description>The plugin will replace the old note name by the this one</description>
          <value>Home</value>
        </value-param>
        <value-param>
          <name>new.note.title</name>
          <description>The plugin will replace the old note title by the this one</description>
          <value>Home</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>

